@model Debt

@{
    ViewData["Title"] = "Delete Debt";
}

<div class="admin-card">
    <div class="admin-card__header">
        <h2>Delete Debt</h2>
    </div>
    <div class="admin-card-body">
        <h3>Are you sure you want to delete this debt?</h3>
        <div>
            <h4>Debt Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Lender
                </dt>
                <dd class="col-sm-10">
                    @Model.Lender.User.FullName
                </dd>
                <dt class="col-sm-2">
                    Student
                </dt>
                <dd class="col-sm-10">
                    @Model.Student.User.FullName
                </dd>
                <dt class="col-sm-2">
                    Principal Amount
                </dt>
                <dd class="col-sm-10">
                    @Model.PrincipalAmount.ToString("C")
                </dd>
                <dt class="col-sm-2">
                    Current Balance
                </dt>
                <dd class="col-sm-10">
                    @Model.CurrentBalance.ToString("C")
                </dd>
                <dt class="col-sm-2">
                    Status
                </dt>
                <dd class="col-sm-10">
                    @Model.Status
                </dd>
            </dl>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>