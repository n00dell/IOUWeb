@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="admin-main-content">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="admin-page-title">Admin Dashboard</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Summary Statistics Section -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="admin-card admin-summary bg-primary">
                    <div class="card-body">
                        <h5 class="admin-card-title">Total Users</h5>
                        <div class="admin-summary__total">
                            <span>Total Registered</span>
                            <span class="admin-summary__amount">254</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="admin-card admin-summary bg-success">
                    <div class="card-body">
                        <h5 class="admin-card-title">Active Loans</h5>
                        <div class="admin-summary__total">
                            <span>Currently Active</span>
                            <span class="admin-summary__amount">128</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="admin-card admin-summary bg-info">
                    <div class="card-body">
                        <h5 class="admin-card-title">Total Amount</h5>
                        <div class="admin-summary__total">
                            <span>Outstanding</span>
                            <span class="admin-summary__amount">$25,400</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="admin-card admin-summary bg-warning">
                    <div class="card-body">
                        <h5 class="admin-card-title">Overdue</h5>
                        <div class="admin-summary__total">
                            <span>Payment Overdue</span>
                            <span class="admin-summary__amount">15</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions and Recent Activity Section -->
        <div class="row mb-4">
            <div class="col-lg-6 mb-4">
                <div class="admin-card">
                    <div class="admin-card__header">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="admin-card-body">
                        <div class="admin-actions">
                            <a href="#" class="admin-actions__item">
                                <i class="fas fa-user-plus admin-actions__icon"></i>
                                <span>Create New User</span>
                            </a>
                            <a href="#" class="admin-actions__item">
                                <i class="fas fa-credit-card admin-actions__icon"></i>
                                <span>Approve Loan Request</span>
                            </a>
                            <a href="#" class="admin-actions__item">
                                <i class="fas fa-file-export admin-actions__icon"></i>
                                <span>Export Data Reports</span>
                            </a>
                            <a href="#" class="admin-actions__item">
                                <i class="fas fa-cog admin-actions__icon"></i>
                                <span>System Settings</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="admin-card">
                    <div class="admin-card__header">
                        <h5 class="mb-0">Recent Activity</h5>
                    </div>
                    <div class="admin-card-body">
                        <div class="admin-activities">
                            <div class="admin-activities__item">
                                <div class="admin-activities__icon">
                                    <i class="fas fa-user-circle text-primary"></i>
                                </div>
                                <div class="admin-activities__content">
                                    <p class="admin-activities__text">New user registered: John Smith</p>
                                    <small class="text-muted">2 hours ago</small>
                                </div>
                            </div>
                            <div class="admin-activities__item">
                                <div class="admin-activities__icon">
                                    <i class="fas fa-money-bill-wave text-success"></i>
                                </div>
                                <div class="admin-activities__content">
                                    <p class="admin-activities__text">Loan #1234 was approved</p>
                                    <small class="text-muted">3 hours ago</small>
                                </div>
                            </div>
                            <div class="admin-activities__item">
                                <div class="admin-activities__icon">
                                    <i class="fas fa-exclamation-triangle text-warning"></i>
                                </div>
                                <div class="admin-activities__content">
                                    <p class="admin-activities__text">Payment overdue for Loan #5678</p>
                                    <small class="text-muted">4 hours ago</small>
                                </div>
                            </div>
                            <div class="admin-activities__item">
                                <div class="admin-activities__icon">
                                    <i class="fas fa-check-circle text-info"></i>
                                </div>
                                <div class="admin-activities__content">
                                    <p class="admin-activities__text">Payment received for Loan #9012</p>
                                    <small class="text-muted">5 hours ago</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Loans Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="admin-card">
                    <div class="admin-card__header">
                        <h5 class="mb-0">Recent Loans</h5>
                        <a href="#" class="btn btn-sm admin-btn-primary">View All</a>
                    </div>
                    <div class="admin-card-body">
                        <div class="table-responsive">
                            <table class="table admin-table">
                                <thead>
                                    <tr>
                                        <th>Loan ID</th>
                                        <th>Borrower</th>
                                        <th>Lender</th>
                                        <th>Amount</th>
                                        <th>Interest</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#1001</td>
                                        <td>Alice Johnson</td>
                                        <td>Bank of ABC</td>
                                        <td>$2,000</td>
                                        <td>5%</td>
                                        <td><span class="admin-status-badge admin-status-badge--active">Active</span></td>
                                        <td>
                                            <div class="btn-group">
                                                <button type="button" class="btn btn-sm admin-btn-primary">View</button>
                                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                            </div>
                                        </td>
                                    </tr>
                                    <!-- Additional rows here -->
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                <span class="text-muted">Showing 4 of 50 entries</span>
                            </div>
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                                    </li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>