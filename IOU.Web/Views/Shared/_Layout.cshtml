<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IOU</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="wrapper">
            <!-- Sidebar -->
            <nav id="sidebar" class="@(User.IsInRole("Student") ? "bg-primary" : 
                                     User.IsInRole("Lender") ? "bg-success" : 
                                     User.IsInRole("Guardian") ? "bg-info" : "bg-dark")">
                <div class="sidebar-header">
                    <h3>IOU</h3>
                </div>

                <ul class="list-unstyled components">
                    @{
                        var userType = User.Claims.FirstOrDefault(c => c.Type == "UserType")?.Value;
                    }
                    
                    @if (User.IsInRole("Student"))
                    {
                        <partial name="_StudentMenu" />
                    }
                    else if (User.IsInRole("Lender"))
                    {
                        <partial name="_LenderMenu" />
                    }
                    else if (User.IsInRole("Guardian"))
                    {
                        <partial name="_GuardianMenu" />
                    }
                </ul>
            </nav>

            <!-- Page Content -->
            <div id="content">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <button type="button" id="sidebarCollapse" class="btn btn-primary">
                            <i class="fas fa-bars"></i>
                        </button>
                        <div class="ml-auto">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <span class="navbar-text mr-3">
                                    Welcome, @User.Identity.Name!
                                </span>
                                <button type="submit" class="btn btn-outline-primary">Logout</button>
                            </form>
                        </div>
                    </div>
                </nav>

                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    }
    else
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">IOU</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    @if (User.Identity.IsAuthenticated)
    {
       
    }
</body>
</html>