@model IOU.Web.Models.ViewModels.CreditCheckRequestViewModel

<div class="container">
    <h2>Request Creditworthiness Report</h2>

    <div class="card mt-4">
        <div class="card-body">
            <form asp-action="RequestCreditCheck" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="StudentEmail" class="form-label"></label>
                    <input asp-for="StudentEmail" class="form-control"
                           placeholder="Enter student's registered email">
                    <span asp-validation-for="StudentEmail" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SelectedPurpose" class="form-label"></label>
                    <select asp-for="SelectedPurpose" asp-items="Model.PurposeOptions"
                            class="form-select">
                        <option value="">-- Select Purpose --</option>
                    </select>
                    <span asp-validation-for="SelectedPurpose" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 form-check">
                    <input type="checkbox" asp-for="RegulatoryCompliance"
                           class="form-check-input">
                    <label asp-for="RegulatoryCompliance" class="form-check-label"></label>
                    <span asp-validation-for="RegulatoryCompliance" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-file-invoice-dollar me-2"></i>Submit Request
                    </button>
                    <a asp-action="CreditCheckRequests" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}